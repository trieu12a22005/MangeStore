<Window x:Class="ManageStore.View.SignUpView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManageStore.View"
        mc:Ignorable="d"
        Title="SignUpView" Height="550" Width="800"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown">
    <Border CornerRadius="15"
            Background="#F5F5F5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="SIGN UP"
                               Foreground="#363636"
                               FontSize="12"
                               FontFamily="Monsterrat"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>
                    <Button x:Name="btnMinimize"
                            BorderThickness="0"
                            Content="-"
                            Foreground="#363636"
                            FontSize="16"
                            FontFamily="Monsterrat"
                            Cursor="Hand"
                            Grid.Column="1"
                            Click="btnMinimize_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#F5F5F5"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#DCDCDC"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="btnClose"
                            BorderThickness="0"
                            Content="x"
                            FontSize="16"
                            FontFamily="Monsterrat"
                            Cursor="Hand"
                            Grid.Column="2"
                            Click="btnClose_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Foreground" Value="#363636"/>
                                <Setter Property="Background" Value="#F5F5F5"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#7AC5CD"/>
                                        <Setter Property="Foreground" Value="#F5F5F5"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="0,15,0,5">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </StackPanel>

            <StackPanel Grid.Row="1"
                        Width="300"
                        Margin="0,25,0,0">
                <TextBlock Text="CREATE YOUR ACCOUNT"
                           Foreground="#363636"
                           FontSize="25"
                           FontWeight="Medium"
                           FontFamily="Monsterrat"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
                <TextBlock Text="Full Name"
                           Foreground="#363636"
                           FontSize="14"
                           FontWeight="Medium"
                           FontFamily="Monsterrat"
                           Margin="0,35,0,0"/>
                <TextBox x:Name="txtName"
                         FontSize="13"
                         FontWeight="Regular"
                         FontFamily="Monsterrat"
                         Foreground="#363636"
                         CaretBrush="#363636"
                         BorderBrush="#363636"
                         BorderThickness="0,0,0,1"
                         Height="28"
                         VerticalContentAlignment="Center"
                         VerticalAlignment="Center"
                         Margin="0,5,0,0">
                </TextBox>
                <TextBlock Text="Email"
                           Foreground="#363636"
                           FontSize="14"
                           FontWeight="Medium"
                           FontFamily="Monsterrat"
                           Margin="0,25,0,0"/>
                <TextBox x:Name="txtEmail"
                         FontSize="13"
                         FontWeight="Regular"
                         FontFamily="Monsterrat"
                         Foreground="#363636"
                         CaretBrush="#363636"
                         BorderBrush="#363636"
                         BorderThickness="0,0,0,1"
                         Height="28"
                         VerticalContentAlignment="Center"
                         VerticalAlignment="Center"
                         Margin="0,5,0,0">
                </TextBox>
                <TextBlock Text="Password"
                           Foreground="#363636"
                           FontSize="14"
                           FontWeight="Medium"
                           FontFamily="Monsterrat"
                           Margin="0,25,0,0"/>
                <PasswordBox x:Name="txtPassword"
                             FontSize="13"
                             FontWeight="Regular"
                             FontFamily="Monsterrat"
                             Foreground="#363636"
                             CaretBrush="#363636"
                             BorderBrush="#363636"
                             BorderThickness="0,0,0,1"
                             Height="28"
                             VerticalContentAlignment="Center"
                             VerticalAlignment="Center"
                             Margin="0,5,0,0">
                </PasswordBox>
                <TextBlock Text="Confirm password"
                           Foreground="#363636"
                           FontSize="14"
                           FontWeight="Medium"
                           FontFamily="Monsterrat"
                           Margin="0,25,0,0"/>
                <PasswordBox x:Name="txtConfirmPass"
                             FontSize="13"
                             FontWeight="Regular"
                             FontFamily="Monsterrat"
                             Foreground="#363636"
                             CaretBrush="#363636"
                             BorderBrush="#363636"
                             BorderThickness="0,0,0,1"
                             Height="28"
                             VerticalContentAlignment="Center"
                             VerticalAlignment="Center"
                             Margin="0,5,0,0">
                </PasswordBox>
                <CheckBox x:Name="chkAccept"
                          Content="I accept all terms of services and privacy policies"
                          FontSize="12"
                          Background="Transparent"
                          Foreground="#363636"
                          FontFamily="Monsterrat"
                          VerticalContentAlignment="Center"
                          Margin="0,5,0,0"/>
                <Button x:Name="btnSignUp"
                        Content="Sign Up"
                        FontSize="14"
                        FontWeight="Medium"
                        FontFamily="Monsterrat"
                        Foreground="#F5F5F5"
                        BorderThickness="0"
                        Margin="0,35,0,0"
                        Cursor="Hand"
                        Grid.Column="2"
                        Click="btnSignUp_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#7AC5CD"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#8EE5EE"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="150" Height="40"
                                    CornerRadius="20"
                                    Background="{TemplateBinding Background}">      
                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
