<Window x:Class="ManageStore.View.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManageStore.View"
        mc:Ignorable="d"
        Title="LoginView" Height="550" Width="800"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown">
    <Border CornerRadius="15"
            Background="#F5F5F5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="LOG IN"
                               Foreground="#363636"
                               FontSize="12"
                               FontFamily="Monsterrat"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>
                    <Button x:Name="btnMinimize"
                            BorderThickness="0"
                            Content="-"
                            Foreground="#363636"
                            FontSize="16"
                            FontFamily="Monsterrat"
                            Cursor="Hand"
                            Grid.Column="1"
                            Click="btnMinimize_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#F5F5F5"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#DCDCDC"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="btnClose"
                        BorderThickness="0"
                        Content="x"
                        FontSize="16"
                        FontFamily="Monsterrat"
                        Cursor="Hand"
                        Grid.Column="2"
                        Click="btnClose_Click">  
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Foreground" Value="#363636"/>
                                <Setter Property="Background" Value="#F5F5F5"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#7AC5CD"/>
                                        <Setter Property="Foreground" Value="#F5F5F5"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="0,15,0,5">
                                    <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </StackPanel>

            <StackPanel Grid.Row="1"
                        Width="300"
                        Margin="0,35,0,0">
                <Image Source="/Images/user-icon.png"
                       Width="100" Height="100"/>

                <TextBlock Text="LOG IN"
                           Foreground="#363636"
                           FontSize="30"
                           FontWeight="Medium"
                           FontFamily="Monsterrat"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
                <TextBlock Text="Email"
                           Foreground="#363636"
                           FontSize="14"
                           FontWeight="Regular"
                           FontFamily="Monsterrat"
                           Margin="0,35,0,0"/>
                <TextBox x:Name="txtEmail"
                         FontSize="13"
                         FontWeight="Medium"
                         FontFamily="Monsterrat"
                         Foreground="#363636"
                         CaretBrush="#363636"
                         BorderBrush="#363636"
                         BorderThickness="0,0,0,1"
                         Height="28"
                         VerticalAlignment="Center"
                         Padding="35,0,0,0"
                         Margin="0,5,0,0">
                    <TextBox.Background>
                        <ImageBrush ImageSource="/Images/letter-icon.png"
                                    Stretch="Uniform"
                                    AlignmentX="Left"/>
                    </TextBox.Background>
                </TextBox>
                <TextBlock Text="Password"
                           FontSize="14"
                           Foreground="#363636"
                           FontWeight="Regular"
                           FontFamily="Monsterrat"
                           Margin="0,35,0,0"/>
                <PasswordBox x:Name="txtPass"
                             FontSize="13"
                             FontWeight="Medium"
                             FontFamily="Monsterrat"
                             Foreground="#363636"
                             CaretBrush="#363636"
                             BorderBrush="#363636"
                             BorderThickness="0,0,0,1"
                             Height="28"
                             VerticalAlignment="Center"
                             Padding="35,0,0,0"
                             Margin="0,5,0,0">
                    <PasswordBox.Background>
                        <ImageBrush ImageSource="/Images/key-icon.png"
                                    Stretch="Uniform"
                                    AlignmentX="Left"/>
                    </PasswordBox.Background>
                </PasswordBox>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Stretch"
                            Margin="0,5,0,0">
                    <CheckBox x:Name="chkRemember"
                              Content="Remember me"
                              FontSize="12"
                              Background="Transparent"
                              Foreground="#363636"
                              FontFamily="Monsterrat"
                              Margin="0,0,20,0"
                              Padding="0,0,50,0"/>
                    <TextBlock Text="Forgot password?"
                               Foreground="#363636"
                               FontSize="12"
                               FontWeight="Regular"
                               FontFamily="Monsterrat"
                               Cursor="Hand"
                               Padding="35,0,0,0"
                               HorizontalAlignment="Right"/>
                </StackPanel>
                <Button x:Name="btnLogin"
                        Content="LOG IN"
                        FontSize="14"
                        FontWeight="Medium"
                        FontFamily="Monsterrat"
                        Foreground="#F5F5F5"
                        BorderThickness="0"
                        Margin="0,35,0,0"
                        Cursor="Hand"
                        Grid.Column="2"
                        Click="btnLogin_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#7AC5CD"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#8EE5EE"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="150" Height="40"
                                    CornerRadius="20"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,5,0,0">
                    <TextBlock Text="Don't have an account?"
                               Foreground="#363636"
                               FontSize="12"
                               FontWeight="Regular"
                               FontFamily="Monsterrat"/>
                    <TextBlock Text="Sign up"
                               Foreground="#363636"
                               FontSize="12"
                               FontWeight="Medium"
                               FontFamily="Monsterrat"
                               Cursor="Hand"/>
                </StackPanel>
            </StackPanel>

        </Grid>
    </Border>
</Window>
