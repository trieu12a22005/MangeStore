<UserControl x:Class="QuanLyQuanAn.View.DialogHost.Message"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyQuanAn.View.DialogHost"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid Height=" 150">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0"
                       FontSize="15"
                       Margin="10"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Text="{Binding Message}"></TextBlock>
            <Grid Grid.Row="1"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center">
                <Button Margin="10 0 5 10"
                        Command="{Binding FalseCm}"
                        Background="Red"
                        Width="150"
                        HorizontalAlignment="Right">Thoát</Button>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
