<Window x:Class="frontend.View.SignInView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:frontend.View"
        mc:Ignorable="d"
        Title="SignInView" Height="550" Width="800"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="1.5*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" 
                    Background="#4CB3B8">
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                <TextBlock Text="Do not have an account?"
                           Foreground="#FFFFFF"
                           FontSize="30"
                           FontWeight="Bold"
                           FontFamily="Monsterrat"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Margin="0,5,0,0"/>
                <Button x:Name="btnSignUp"
                        Content="Sign Up"
                        FontSize="14"
                        FontWeight="Bold"
                        FontFamily="Monsterrat"
                        Foreground="#4CB3B8"
                        Background="#FFFFFF"
                        BorderThickness="0"
                        Margin="0, 35, 0, 0"
                        Cursor="Hand"
                        Click="btnSignUp_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="150" Height="40"
                                    CornerRadius="20"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Column="1" Background="#FFFFFF">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="25"/>
                            <ColumnDefinition Width="25"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="btnMinimize"
                                BorderThickness="0"
                                Content="-"
                                FontSize="16"
                                FontFamily="Monsterrat"
                                Cursor="Hand"
                                Grid.Column="1"
                                Click="btnMinimize_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Foreground" Value="#4CB3B8"/>
                                    <Setter Property="Background" Value="#FFFFFF" />
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="#FFFFFF"/>
                                            <Setter Property="Background" Value="#4CB3B8"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button x:Name="btnClose"
                                Grid.Column="2"
                                Content="x"
                                FontSize="16"
                                FontFamily="Monsterrat"
                                Cursor="Hand"
                                Click="btnClose_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Foreground" Value="#4CB3B8"/>
                                    <Setter Property="Background" Value="#FFFFFF"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="#FFFFFF"/>
                                            <Setter Property="Background" Value="#4CB3B8"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </StackPanel>

                <StackPanel Grid.Row="1"
                            Width="400"
                            Margin="0,40,0,0">
                    <TextBlock Text="Sign in to App"
                               Foreground="#4CB3B8"
                               FontSize="50"
                               FontWeight="Bold"
                               FontFamily="Monsterrat"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                    <StackPanel Margin="0, 35, 0 ,0" Width="300">
                        <Border Width="300"                                
                                BorderThickness="1"
                                BorderBrush="#acb0af"                                
                                CornerRadius="5"
                                Margin="0, 35, 0, 0"
                                HorizontalAlignment="Center">
                            <Grid Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Image Source="/Images/mail-icon.png" Height="20"/>
                                <TextBlock x:Name="textEmail"                                                                                    
                                           MouseDown="textEmail_MouseDown"
                                           Text="Email"
                                           Style="{StaticResource textHint}"/>
                                <TextBox x:Name="txtEmail"
                                         TextChanged="txtEmail_TextChanged"
                                         FocusVisualStyle="{x:Null}"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         Style="{StaticResource textBox}"/>
                            </Grid>
                        </Border>
                        <Border Width="300"                                
                                BorderThickness="1"
                                BorderBrush="#acb0af"                                
                                CornerRadius="5"
                                Margin="0, 35, 0, 0"
                                HorizontalAlignment="Center">   
                            <Grid Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Image Source="/Images/lock-icon.png" Height="20"/>
                                <TextBlock x:Name="textPassword"
                                           MouseDown="textPassword_MouseDown"
                                           Text="Password"
                                           Style="{StaticResource textHint}"/>
                                <PasswordBox x:Name="txtPassword"
                                             PasswordChanged="txtPassword_PasswordChanged"
                                             FocusVisualStyle="{x:Null}"
                                             BorderThickness="0"
                                             Background="Transparent"
                                             Style="{StaticResource textBox}"/>
                            </Grid>
                        </Border>
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Stretch"
                                    Margin="0, 15, 0, 0">
                            <CheckBox x:Name="chkRemember"
                                      Content="Remember me"
                                      FontSize="12"
                                      Foreground="#000000"
                                      FontWeight="Light"
                                      Background="Transparent"
                                      FontFamily="Monsterrat"
                                      VerticalContentAlignment="Center"
                                      Margin="0,0,15,0"
                                      Padding="0,0,50,0"/>
                            <TextBlock Text="Forgot password?"
                                       Foreground="#000000"
                                       FontFamily="Monsterrat"
                                       FontWeight="Light"
                                       Cursor="Hand"
                                       Margin="20,0,0,0"
                                       Padding="35,0,0,0"
                                       HorizontalAlignment="Right"
                                       MouseDown="TextBlock_MouseDown"/>
                        </StackPanel>

                        <Button x:Name="btnSignIn"
                                Content="Sign In"
                                FontSize="14"
                                FontWeight="Bold"
                                FontFamily="Monsterrat"
                                Foreground="#FFFFFF"
                                BorderThickness="0"
                                Margin="0, 35, 0, 0"
                                Cursor="Hand"
                                Click="btnSignIn_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#4CB3B8"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#2FA7AC"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Width="200" Height="40"
                                            CornerRadius="20"
                                            Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"
                                                          HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </StackPanel>
        
    </Grid>
</Window>
