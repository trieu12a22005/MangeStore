<UserControl x:Class="QuanLyQuanAn.View.StaffView.OrderFood"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyQuanAn.View.StaffView"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:QuanLyQuanAn.ViewModel.MenuVM"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             x:Name="OrderFoods"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:OrderFoodVM />
    </UserControl.DataContext>
    <UserControl.Resources>
        <vm:ByteToImageConverter x:Key="ByteToImageConverter" />
        <vm:IntToString x:Key="PriceToString" />
    </UserControl.Resources>
    <UserControl.Triggers>
        <EventTrigger RoutedEvent="UserControl.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                     From="0.0"
                                     To="1.0"
                                     Duration="0:0:0.5" />
                </Storyboard>
            </BeginStoryboard>
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="UserControlTranslateTransform"
                                     Storyboard.TargetProperty="Y"
                                     From="30"
                                     To="0"
                                     Duration="0:0:0.5">

                    </DoubleAnimation>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </UserControl.Triggers>
    <UserControl.RenderTransform>
        <TranslateTransform x:Name="UserControlTranslateTransform"
                            X="0"
                            Y="30" />
    </UserControl.RenderTransform>
    <materialDesign:DialogHost Identifier="RootDialogHost">
        <materialDesign:DialogHost.DialogContent>
            <ContentControl Content="{Binding CurrentDialogContent}" />
        </materialDesign:DialogHost.DialogContent>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"
                                  MinWidth="540" />
                <ColumnDefinition Width="*"
                                  MinWidth="330" />
            </Grid.ColumnDefinitions>
            <Border Grid.Row="0"
                    Height="40"
                    Margin="20 0 20 0"
                    HorizontalAlignment="Stretch">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"
                                          MaxWidth="500" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Border CornerRadius="15"
                            Background="#D6D9DD"
                            Grid.Column="0"
                            HorizontalAlignment="Stretch"
                            MaxWidth="500">
                        <Grid HorizontalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0"
                                     MinWidth="200"
                                     MaxWidth="500"
                                     Margin="10,0,0,0"
                                     HorizontalAlignment="Stretch"
                                     VerticalAlignment="Center"
                                     materialDesign:HintAssist.Hint="Tìm kiếm"
                                     materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                     BorderThickness="0"
                                     FontSize="15" 
                                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
                            <Button Grid.Column="1"
                                    Style="{StaticResource MaterialDesignToolButton}">
                                <materialDesign:PackIcon Margin="0,0,10,0"
                                                         Kind="Search"
                                                         Opacity=".56"
                                                         Width="20"
                                                         Height="20" />
                            </Button>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
            <Grid Grid.Row="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <ComboBox Width="256"
                                  Height="50"
                                  FontSize="15"
                                  materialDesign:HintAssist.Hint="Danh mục"
                                  materialDesign:TextFieldAssist.HasClearButton="True"
                                  ItemsSource="{Binding CategoryNames}"
                                  DisplayMemberPath="name"
                                  SelectedItem="{Binding SelectedCategory}"
                                  Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                                  HorizontalAlignment="Right"
                                  Margin="0 0 15 0"
                                  >
                        </ComboBox>
                    </Grid>
                    <Separator Height="1"
                               Grid.Row="0"
                               Background="#DAE2EA"
                               Margin="0,50,0,0"
                               Grid.ColumnSpan="2"
                               Grid.RowSpan="2">
                    </Separator>
                    <Grid Grid.Row="2"
                          Margin="0 10 0 0">
                        <Grid HorizontalAlignment="Center">
                            <ScrollViewer VerticalScrollBarVisibility="Hidden">
                                <ItemsControl ItemsSource="{Binding FilteredFood}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel SnapsToDevicePixels="True" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <ContentControl Height="165"
                                                            Width="150"
                                                            Margin="2"
                                                            Padding="1">
                                                <ContentControl.Style>
                                                    <Style TargetType="ContentControl">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="ContentControl">
                                                                    <Border Background="{TemplateBinding Background}"
                                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                                            Padding="{TemplateBinding Padding}"
                                                                            SnapsToDevicePixels="true">
                                                                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                                                          SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                                                                          RecognizesAccessKey="True" />
                                                                    </Border>
                                                                    <ControlTemplate.Triggers>
                                                                        <!-- Trigger cho khi được Focused -->
                                                                        <Trigger Property="IsKeyboardFocused"
                                                                                 Value="true">
                                                                            <Setter Property="Background"
                                                                                    Value="LightYellow" />
                                                                            <Setter Property="BorderBrush"
                                                                                    Value="Orange" />
                                                                        </Trigger>

                                                                        <!-- Trigger cho khi MouseOver -->
                                                                        <Trigger Property="IsMouseOver"
                                                                                 Value="true">
                                                                            <Setter Property="Background"
                                                                                    Value="LightBlue" />
                                                                            <Setter Property="BorderBrush"
                                                                                    Value="DodgerBlue" />
                                                                            <Setter Property="Opacity"
                                                                                    Value="1" />
                                                                            <!-- Làm nút sáng lên -->
                                                                            <Setter Property="Effect">
                                                                                <Setter.Value>
                                                                                    <DropShadowEffect Color="DodgerBlue"
                                                                                                      BlurRadius="10"
                                                                                                      ShadowDepth="0" />
                                                                                </Setter.Value>
                                                                            </Setter>
                                                                        </Trigger>

                                                                        <!-- Trigger cho khi Button được nhấn (Pressed) -->


                                                                        <!-- Trigger cho khi Button bị vô hiệu hóa -->
                                                                        <Trigger Property="IsEnabled"
                                                                                 Value="false">
                                                                            <Setter Property="Foreground"
                                                                                    Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" />
                                                                        </Trigger>
                                                                    </ControlTemplate.Triggers>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </ContentControl.Style>
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="90" />
                                                        <RowDefinition Height="30" />
                                                        <RowDefinition Height="45" />
                                                    </Grid.RowDefinitions>
                                                    <Grid.Background>
                                                        <ImageBrush ImageSource="{Binding FoodImage, Converter={StaticResource ByteToImageConverter}}" />
                                                    </Grid.Background>
                                                    <ContentControl Grid.Row="1"
                                                                    HorizontalAlignment="Center"
                                                                    Height="30"
                                                                    Tag="15"
                                                                    FontWeight="Bold"
                                                                    FontSize="18"
                                                                    Content="{Binding name}">
                                                        <ContentControl.Style>
                                                            <Style TargetType="ContentControl">
                                                                <Setter Property="Background"
                                                                        Value="#80000000" />
                                                                <Setter Property="Template">
                                                                    <Setter.Value>
                                                                        <ControlTemplate TargetType="ContentControl">
                                                                            <Border CornerRadius="{Binding Path=Tag, RelativeSource={RelativeSource TemplatedParent}}"
                                                                                    Background="{TemplateBinding Background}"
                                                                                    Height="{TemplateBinding Property=Height}"
                                                                                    Width="150"
                                                                                    Margin="0 0 13 0">
                                                                                <Border.RenderTransform>
                                                                                    <TranslateTransform X="14" />
                                                                                </Border.RenderTransform>
                                                                                <TextBlock Text="{TemplateBinding Property=Content}"
                                                                                           HorizontalAlignment="Right"
                                                                                           Height="auto"
                                                                                           Foreground="Wheat"
                                                                                           VerticalAlignment="Center">
                                                                                    <TextBlock.RenderTransform>
                                                                                        <TranslateTransform X="-19" />
                                                                                    </TextBlock.RenderTransform>
                                                                                </TextBlock>
                                                                            </Border>
                                                                        </ControlTemplate>
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </Style>
                                                        </ContentControl.Style>
                                                    </ContentControl>
                                                    <ContentControl Grid.Row="2"
                                                                    Height="22.5"
                                                                    Tag="10.5"
                                                                    Width="105"
                                                                    FontSize="13"
                                                                    Content="{Binding price, Converter={StaticResource PriceToString}}">
                                                        <ContentControl.Style>
                                                            <Style TargetType="ContentControl">
                                                                <Setter Property="Background"
                                                                        Value="#80000000" />
                                                                <Setter Property="Template">
                                                                    <Setter.Value>
                                                                        <ControlTemplate TargetType="ContentControl">
                                                                            <Border CornerRadius="{Binding Path=Tag, RelativeSource={RelativeSource TemplatedParent}}"
                                                                                    Background="{TemplateBinding Background}"
                                                                                    Height="{TemplateBinding Property=Height}"
                                                                                    Width="150"
                                                                                    Margin="0 0 13 0">
                                                                                <Border.RenderTransform>
                                                                                    <TranslateTransform X="40.5" />
                                                                                </Border.RenderTransform>
                                                                                <Grid>
                                                                                    <Grid.ColumnDefinitions>
                                                                                        <ColumnDefinition Width="16.5" />
                                                                                        <ColumnDefinition />
                                                                                    </Grid.ColumnDefinitions>
                                                                                    <Image Width="16.5"
                                                                                           Height="16.5"
                                                                                           Grid.Column="0"
                                                                                           HorizontalAlignment="Left"
                                                                                           Source="C:\Users\LE NGOC BINH\Documents\Lap_Trinh_Truc_Quan\Đồ án\QuanLyQuanAn\QuanLyQuanAn\Images\MoneyIcon.png">
                                                                                        <Image.RenderTransform>
                                                                                            <TranslateTransform X="4.5" />
                                                                                        </Image.RenderTransform>
                                                                                    </Image>
                                                                                    <TextBlock Text="{TemplateBinding Property=Content}"
                                                                                               Height="auto"
                                                                                               Grid.Column="1"
                                                                                               Width="auto"
                                                                                               Foreground="Yellow"
                                                                                               HorizontalAlignment="Right"
                                                                                               VerticalAlignment="Center">
                                                                                        <TextBlock.RenderTransform>
                                                                                            <TranslateTransform X="-65" />
                                                                                        </TextBlock.RenderTransform>
                                                                                    </TextBlock>
                                                                                </Grid>
                                                                            </Border>
                                                                        </ControlTemplate>
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </Style>
                                                        </ContentControl.Style>
                                                        <ContentControl.RenderTransform>
                                                            <TranslateTransform Y="-9" />
                                                        </ContentControl.RenderTransform>
                                                    </ContentControl>
                                                    <Button Grid.Row="0"
                                                            Margin="0 0 5 5"
                                                            Width="40"
                                                            Height="40"
                                                            HorizontalAlignment="Right"
                                                            VerticalAlignment="Bottom"
                                                            Background="#E95937"
                                                            Command="{Binding DataContext.AddFoodCm, ElementName=OrderFoods}"
                                                            CommandParameter="{Binding}">
                                                        <materialDesign:PackIcon Kind="Add"
                                                                                 Margin="-8 -8 -10 -10" />
                                                    </Button>
                                                </Grid>
                                            </ContentControl>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
            <Grid Grid.Column="1"
                  Grid.Row="0"
                  Grid.RowSpan="2"
                  Margin="0 0 5 15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="{Binding}"
                                   MaxHeight="500" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0"
                           FontSize="15"
                           FontWeight="Bold">Hóa đơn</TextBlock>
                <DataGrid RowStyle="{DynamicResource DataGridRowStyle1}"
                          ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}"
                          CellStyle="{DynamicResource DataGridCellStyle1}"
                          x:Name="membersDataGrid"
                          ItemsSource="{Binding BillInfList}"
                          Style="{DynamicResource DataGridStyle1}"
                          Grid.Row="1">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="#"
                                            CanUserResize="False"
                                            Width="40"
                                            Binding="{Binding No}" />
                        <DataGridTemplateColumn Header="Tên món ăn"
                                                Width="3*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="25"
                                                Height="25"
                                                CornerRadius="50"
                                                Margin="0 0 10 0">
                                            <Border.Background>
                                                <ImageBrush ImageSource="{Binding FoodImage, Converter={StaticResource ByteToImageConverter}}" />
                                            </Border.Background>
                                        </Border>

                                        <TextBlock Text="{Binding Name}"
                                                   VerticalAlignment="Center" />
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Đơn giá"
                                                Width="2*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel HorizontalAlignment="Stretch"
                                                Orientation="Horizontal">
                                        <TextBlock Text="{Binding Price, StringFormat=N0}"
                                                   Width="45" />
                                        <TextBlock> VNĐ</TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>

                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Số lượng"
                                                Width="2*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Height="15"
                                                Width="15"
                                                Background="Orange"
                                                Command="{Binding DataContext.MinusCount, ElementName=OrderFoods}"
                                                CommandParameter="{Binding}">
                                            <materialDesign:PackIcon Kind="Minus" Margin="-16 -9 -10 -20"/>
                                        </Button>
                                        <TextBox VerticalAlignment="Top"
                                                 materialDesign:HintAssist.Hint="Text (validated)"
                                                 CaretBrush="Wheat"
                                                 Width="20"
                                                 Text="{Binding Count, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource PriceToString}}"
                                                 HorizontalAlignment="Center"/>
                                        <Button Height="15"
                                                Width="15"
                                                Background="Orange"
                                                Command="{Binding DataContext.PlusCount, ElementName=OrderFoods}"
                                                CommandParameter="{Binding}">
                                            <materialDesign:PackIcon Kind="Plus"
                                                                     Margin="-16 -9 -10 -20" />
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <TextBlock FontSize="14"
                               FontWeight="Bold">Tổng tiền:</TextBlock>
                    <TextBlock FontSize="14"
                               FontWeight="Bold"
                               Text="{Binding TotalFood, StringFormat=N0}"
                               Margin="5 0 5 0" />
                    <TextBlock FontSize="14"
                               FontWeight="Bold"
                               Margin="0 0 5 0">VNĐ</TextBlock>
                </StackPanel>
                <StackPanel Grid.Row="3"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button Margin="0 10 5 0"
                            Background="Red"
                            Command="{Binding ClearBill}"
                            >
                        <materialDesign:PackIcon Kind="Delete" />
                    </Button>
                    <Button Margin="5 10 5 0" Command="{Binding AddBill}">
                        <materialDesign:PackIcon Kind="Send" />
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </materialDesign:DialogHost>
</UserControl>
