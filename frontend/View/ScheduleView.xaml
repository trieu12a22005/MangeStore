<UserControl x:Class="frontend.View.ScheduleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:frontend.View"
             xmlns:converter="clr-namespace:frontend.Converters"
             xmlns:vm="clr-namespace:frontend.ViewModel"
             d:DataContext="{d:DesignInstance Type=vm:ScheduleViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="525" d:DesignWidth="600"
             Background="#F6F8F9">
    <UserControl.Resources>
        <converter:ShiftTypeToRowConverter x:Key="ShiftTypeToRowConverter"/>
        <converter:DateToColumnConverter x:Key="DateToColumnConverter"/>
    </UserControl.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
              Background="#FFFFFF"
              Margin="0, 0, 0, 10">
            <TextBlock Text="Lịch làm việc"
                       FontSize="20"
                       FontFamily="Monsterrat"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Padding="10"/>
        </Grid>
        <Grid Grid.Row="1"
              Background="#FFFFFF">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0"
                       Grid.Column="0"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Thứ hai"
                       Grid.Row="0"
                       Grid.Column="1"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Thứ ba"
                       Grid.Row="0"
                       Grid.Column="2"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Thứ tư"
                       Grid.Row="0"
                       Grid.Column="3"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Thứ năm"
                       Grid.Row="0"
                       Grid.Column="4"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Thứ sáu"
                       Grid.Row="0"
                       Grid.Column="5"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Thứ bảy"
                       Grid.Row="0"
                       Grid.Column="6"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Chủ nhật"
                       Grid.Row="0"
                       Grid.Column="7"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

            <TextBlock Text="Sáng"
                       Grid.Row="1"
                       Grid.Column="0"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontWeight="SemiBold"/>
            <TextBlock Text="Chiều"
                       Grid.Row="2"
                       Grid.Column="0"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontWeight="SemiBold"/>
            <TextBlock Text="Tối"
                       Grid.Row="3"
                       Grid.Column="0"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontWeight="SemiBold"/>
            
            <!-- Schedule Items -->
            <ItemsControl ItemsSource="{Binding Shifts}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Grid/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemContainerStyle>
                    <Style>
                        <Setter Property="Grid.Row" Value="{Binding ShiftType, Converter={StaticResource ShiftTypeToRowConverter}}"/>
                        <Setter Property="Grid.Column" Value="{Binding Date, Converter={StaticResource DateToColumnConverter}}"/>
                    </Style>
                </ItemsControl.ItemContainerStyle>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                Margin="2"
                                Background="#F9F9F9">
                            <StackPanel Margin="5">
                                <TextBlock Text="{Binding UserName}"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding Status}"
                                           FontSize="12"
                                           Foreground="#000000"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Grid>
</UserControl>
